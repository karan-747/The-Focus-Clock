<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/my_grey"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="5dp"

        app:cardMaxElevation="0dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDateRI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:elevation="20dp"
                android:drawableRight="@drawable/ic_baseline_calendar_month_24"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Tuesday, 13 June 2023" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Focus Time (minutes)"
                    android:textColor="@color/material_dynamic_neutral30"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    android:textAlignment="textStart"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="7"
                    />

                <TextView
                    android:id="@+id/tvMinutesRI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="115"
                    android:textColor="@color/material_dynamic_neutral30"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="3"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="Focus Mode"
                    android:textColor="@color/material_dynamic_neutral40"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="6"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Work"
                    android:textSize="12sp"
                    android:layout_marginRight="4dp"
                    android:textAlignment="textEnd "
                    android:textColor="@color/material_dynamic_neutral40"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_working"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>